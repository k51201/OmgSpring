<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="eventLogger" class="ru.vampa.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileLogger" class="ru.vampa.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/events.log"/>
    </bean>

    <bean id="cacheFileLogger" class="ru.vampa.spring.core.loggers.CacheFileEventLogger"
          destroy-method="destroy"
          parent="fileLogger">
        <constructor-arg index="1" value="5"/>
    </bean>

</beans>
